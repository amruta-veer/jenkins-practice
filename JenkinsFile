pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Checking out code...'
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Setting up Python virtual environment and installing packages...'
                script {
                    // Create virtual environment
                    def pythonPath = 'C:\\Users\\DELL\\AppData\\Local\\Programs\\Python\\Python310\\python.exe'
                    bat "${pythonPath} -m venv venv"

                    // Upgrade pip using python -m pip (Windows safe)
                    bat 'venv\\Scripts\\python.exe -m pip install --upgrade pip'

                    // Install required packages
                    bat 'venv\\Scripts\\python.exe -m pip install pandas numpy'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    // Run a simple test using virtual environment Python
                    bat 'venv\\Scripts\\python.exe -c "import pandas as pd; import numpy as np; print(\'Pandas version:\', pd.__version__, \'NumPy version:\', np.__version__)"'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                echo 'Pipeline complete!'
            }
        }
    }

    post {
        success {
            echo 'Pipeline finished successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
