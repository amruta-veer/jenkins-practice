pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm
            }
        }

        stage('Install') {
            steps {
                echo 'Installing dependencies...'
                // Create virtual environment using full Python path
                bat 'C:\\Users\\DELL\\AppData\\Local\\Programs\\Python\\Python310\\python.exe -m venv venv'
                
                // Use pip from the virtual environment
                bat 'venv\\Scripts\\pip.exe install --upgrade pip'
                bat 'venv\\Scripts\\pip.exe install pandas numpy'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Use python from the virtual environment
                bat 'venv\\Scripts\\python.exe -c "import pandas; print(pandas.__version__)"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                echo 'Pipeline complete!'
            }
        }
    }
}
